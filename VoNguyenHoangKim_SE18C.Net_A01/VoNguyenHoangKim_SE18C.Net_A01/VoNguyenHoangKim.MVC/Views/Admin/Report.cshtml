@using VoNguyenHoangKim.Common.Enums
@model IEnumerable<VoNguyenHoangKim.Service.ValidateReceive.NewsArticleResponse>

@{
    ViewData["Title"] = "Report";
}

<style>
    :root {
        --color-primary: #3F6C45;
        --color-secondary: #FFFFFF;
        --color-text-light: #FFFFFF;
        --color-text-dark: #333333;
    }

    .report-card {
        border-radius: 12px;
        background: var(--color-secondary);
        padding: 25px;
        margin-bottom: 30px;
    }

    .card-title {
        font-weight: 700;
        color: var(--color-primary);
        font-size: 1.8rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-label {
        font-weight: 500;
        color: var(--color-primary);
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid var(--color-primary);
        padding: 10px;
        font-size: 0.95rem;
    }

        .form-control:focus {
            border-color: var(--color-primary);
            outline: none;
        }

    .btn-report {
        background-color: var(--color-primary);
        color: var(--color-text-light);
        border: none;
        border-radius: 8px;
        padding: 0 20px;
        font-weight: 500;
        height: 100%;
    }

        .btn-report:hover {
            background-color: var(--color-primary); /* giữ nguyên màu */
            color: var(--color-text-light);
            transform: none; /* không dịch chuyển */
            box-shadow: none; /* không shadow */
            cursor: pointer; /* vẫn hiện con trỏ pointer */
        }

    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 0.95rem;
        border-radius: 8px;
    }

        .table-modern thead {
            background-color: var(--color-primary);
            color: var(--color-text-light);
        }

        .table-modern th, .table-modern td {
            padding: 14px 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: left;
            vertical-align: middle;
        }

        .table-modern th {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-modern tbody tr:hover {
            background-color: rgba(63,108,69,0.08);
        }

    .alert-warning {
        border-radius: 8px;
        padding: 15px;
        font-size: 0.95rem;
        background-color: rgba(63,108,69,0.08);
        color: #3F6C45;
        border: none;
    }
</style>

<div class="container mt-0">
    <div class="report-card">
        <h2 class="card-title">Generate Report</h2>
        <form asp-action="Report" method="get" class="row g-3 mb-4">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control"
                       value="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control"
                       value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-report w-100">Generate Report</button>
            </div>
            <div class="col-md-1"></div>
        </form>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table-modern">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Created Date</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Modified By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }
                        @foreach (var article in Model)
                        {
                            <tr class="align-middle">
                                <td>@index</td>
                                <td>@article.NewsArticle.Title</td>
                                <td>@article.NewsArticle.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@article.NewsArticle.CategoryName</td>
                                <td>
                                    @{
                                        var statusColor = article.NewsArticle.Status == Status.Active ? "#3F6C45" :
                                        article.NewsArticle.Status == Status.Inactive ? "#dc3545" : "#6c757d";
                                    }
                                    <span style="font-weight:600; color:@statusColor">
                                        @article.NewsArticle.Status
                                    </span>
                                </td>
                                <td>@(article.NewsArticle.AccountFullName ?? "N/A")</td>
                                <td>@(article.NewsArticle.UpdatedByFullName ?? "N/A")</td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning mt-4" role="alert">
                Not Found !!!
            </div>
        }
    </div>
</div>
