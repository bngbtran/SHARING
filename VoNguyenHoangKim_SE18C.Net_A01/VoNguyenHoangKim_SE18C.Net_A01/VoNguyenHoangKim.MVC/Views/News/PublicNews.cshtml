        --color-text-dark: #333333;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .page-header h2 {
            font-weight: 700;
            color: var(--color-primary);
            margin: 0;
            font-size: 1.8rem;
        }

    .manage-accounts-card {
        padding: 2px;
    }

    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 0.95rem;
        border-radius: 8px;
    }

        .table-modern thead {
            background: var(--color-primary);
            color: var(--color-text-light);
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .table-modern th, .table-modern td {
            padding: 14px 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: left;
            vertical-align: middle;
        }

        .table-modern th {
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .table-modern tbody tr:hover {
            background-color: rgba(63,108,69,0.08);
        }

    .btn-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--color-primary);
        background: transparent;
        color: var(--color-primary);
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-info {
        border-color: #17a2b8;
        color: #17a2b8;
        text-decoration: none;
    }

        .btn-info:hover {
            background: #17a2b8;
            color: #fff;
        }

    .status-active {
        color: #00FF00;
        font-weight: 600;
    }

    .status-inactive {
        color: #DD0000;
        font-weight: 600;
    }

    .no-data {
        padding: 40px 0;
        border-radius: 8px;
        background-color: rgba(63,108,69,0.08);
        text-align: center;
        color: var(--color-primary);
    }

    .search-bar input.form-control {
        border-radius: 8px 0 0 8px;
        border: 1px solid #ccc;
    }

    .search-bar button {
        border-radius: 0 8px 8px 0;
    }

    .btn-search {
        background: #3F6C45;
        color: #FFFFFF;
    }

        .btn-search:hover {
            background: #3F6C45;
            color: #FFFFFF;
            box-shadow: none;
            cursor: pointer;
        }

    .alert-warning {
        border-radius: 8px;
        padding: 15px;
        font-size: 0.95rem;
        background-color: rgba(63,108,69,0.08);
        color: #3F6C45;
        border: none;
    }
</style>
