@using VoNguyenHoangKim.Common.Enums
@model IEnumerable<VoNguyenHoangKim.Service.ValidateReceive.NewsArticleResponse>

@{
    ViewData["Title"] = "News";
}

<div class="page-header">
    <h2>News List</h2>
</div>

<div class="manage-accounts-card">
    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="PublicNews" method="get">
                <div class="input-group search-bar">
                    <input type="text" name="search" class="form-control"
                           placeholder="Search news"
                           value="@ViewData["CurrentSearch"]" />
                    <button type="submit" class="btn btn-search">
                        <i class="pi pi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <table class="table-modern">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Headline</th>
                <th>Source</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var article in Model)
            {
                <tr>
                    <td>@index</td>
                    <td class="fw-semibold">@article.NewsArticle.Title</td>
                    <td>@(article.NewsArticle.Headline?.Length > 50 ? article.NewsArticle.Headline.Substring(0, 50) + "..." : article.NewsArticle.Headline)</td>
                    <td>@(article.NewsArticle.NewsSource ?? "N/A")</td>
                    <td>@article.NewsArticle.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="@(article.NewsArticle.Status == Status.Active ? "status-active" : "status-inactive")">
                            @article.NewsArticle.Status
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="PublicDetails" asp-route-id="@article.NewsArticle.Id"
                           class="btn-icon btn-info">
                            <i class="pi pi-eye"></i>
                        </a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4" role="alert">
            Not Found !!!
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<style>
