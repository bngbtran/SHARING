@page
@model RazorWeb.Pages.Brands.IndexModel
@{
    ViewData["Title"] = "Brand List";
}

<h2>Brands Management</h2>

<form method="get" class="mb-3 d-flex">
    <input type="text" name="Keyword" value="@Model.Keyword" class="form-control me-2" placeholder="Search brand..." />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<a asp-page="Create" class="btn btn-primary mb-3">Add New Brand</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Brands)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
