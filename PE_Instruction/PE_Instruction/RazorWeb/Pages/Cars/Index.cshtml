@page
@model RazorWeb.Pages.Cars.IndexModel
@{
    ViewData["Title"] = "Cars";
}

<h2>Cars Management</h2>

<form method="get" class="mb-3 d-flex">
    <input type="text" name="Keyword" value="@Model.Keyword" class="form-control me-2" placeholder="Search car by name..." />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<a asp-page="Create" class="btn btn-primary mb-3">Add New Car</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Name</td>
                <td>@car.Brand?.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
