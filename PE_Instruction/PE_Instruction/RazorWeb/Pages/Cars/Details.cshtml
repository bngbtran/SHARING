@page "{id:int}"
@model RazorWeb.Pages.Cars.DetailsModel
@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Car.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Car.Name</dd>

    <dt class="col-sm-2">Brand</dt>
    <dd class="col-sm-10">@Model.Car.Brand?.Name</dd>
</dl>

<a asp-page="Index" class="btn btn-secondary">Back to List</a>
