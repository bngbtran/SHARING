@page
@model RazorWeb.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-3">Users List</h2>

<form method="get" class="mb-3 d-flex">
    <input type="text" name="Keyword" value="@Model.Keyword" class="form-control me-2" placeholder="Search by Email..." />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<a asp-page="Create" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-hover table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Role</th>
            <th>Brand</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.Brand?.Name ?? "-")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
