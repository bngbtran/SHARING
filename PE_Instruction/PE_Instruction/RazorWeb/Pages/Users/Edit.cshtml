@page "{id:int}"
@model RazorWeb.Pages.Users.EditModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit User";

    // Chuẩn bị danh sách Role
    var roles = new List<SelectListItem>
    {
        new SelectListItem("Admin", ((int)Business.UserRole.Admin).ToString(), Model.User.Role == Business.UserRole.Admin),
        new SelectListItem("Staff", ((int)Business.UserRole.Staff).ToString(), Model.User.Role == Business.UserRole.Staff)
    };

    // Chuẩn bị danh sách Brand
    var brandItems = Model.Brands.Select(b =>
        new SelectListItem(b.Name, b.Id.ToString(), b.Id == Model.User.BrandId)
    ).ToList();
    brandItems.Insert(0, new SelectListItem("-- None --", "", Model.User.BrandId == null));
}

<h2 class="mb-3">Edit User</h2>

<form method="post" class="card p-3">
    <input type="hidden" asp-for="User.Id" />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="User.Email" class="form-control" type="email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="User.Password" class="form-control" type="password" placeholder="Leave empty to keep current password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="User.Role" class="form-select" asp-items="roles" id="roleSelect"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Brand (for Staff)</label>
        <select asp-for="User.BrandId" class="form-select" asp-items="brandItems" id="brandSelect"></select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const brandSelect = document.getElementById('brandSelect');

        function toggleBrand() {
            if (roleSelect.value === "@((int)Business.UserRole.Admin)") { // Admin
                brandSelect.value = "";
                brandSelect.disabled = true;
            } else { // Staff
                brandSelect.disabled = false;
            }
        }

        toggleBrand();
        roleSelect.addEventListener('change', toggleBrand);
    </script>
}
