@page
@model VoNguyenHoangKim.RazorPages.Pages.Staff.IndexModel
@using VoNguyenHoangKim.Common.Enums
@using VoNguyenHoangKim.Service.ValidateReceive

@{
    ViewData["Title"] = "Manage Categories";
}
<style>
    :root {
        --color-primary: #3F6C45;
        --color-secondary: #FFFFFF;
        --color-text-light: #FFFFFF;
        --color-text-dark: #333333;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .page-header h2 {
            font-weight: 700;
            color: var(--color-primary);
            margin: 0;
            font-size: 1.8rem;
        }

    .btn-create {
        background: var(--color-primary);
        color: var(--color-text-light);
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .manage-categories-card {
        padding: 2px;
    }

    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-size: 0.95rem;
        border-radius: 8px;
    }

        .table-modern thead {
            background: var(--color-primary);
            color: var(--color-text-light);
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .table-modern th, .table-modern td {
            padding: 14px 20px;
            border-bottom: 1px solid #e9ecef;
            text-align: left;
            vertical-align: middle;
        }

        .table-modern th {
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .table-modern tbody tr:hover {
            background-color: rgba(63,108,69,0.08);
        }

    .btn-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--color-primary);
        background: transparent;
        color: var(--color-primary);
        font-size: 1rem;
        cursor: pointer;
    }

    .btn-edit {
        border-color: #4897d8;
        color: #4897d8;
        text-decoration: none;
    }

        .btn-edit:hover {
            background: #4897d8;
            color: #fff;
        }

    .btn-delete {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }

    .search-bar input.form-control {
        border-radius: 8px 0 0 8px;
        border: 1px solid #ccc;
    }

    .search-bar button {
        border-radius: 0 8px 8px 0;
    }

    .no-data {
        padding: 40px 0;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .btn-search {
        background: #3F6C45;
        color: #FFFFFF;
    }

        .btn-search:hover {
            background: #3F6C45;
            color: #FFFFFF;
            box-shadow: none;
            cursor: pointer;
        }

    .alert-warning {
        border-radius: 8px;
        padding: 15px;
        font-size: 0.95rem;
        background-color: rgba(63,108,69,0.08);
        color: #3F6C45;
        border: none;
    }
</style>

<div class="page-header">
    <h2>Category List</h2>
    <a asp-page="/Staff/CreateCategory" class="btn-create">
        <i class="pi pi-plus"></i> Create
    </a>
</div>

<div class="manage-categories-card">
    <div class="row mb-4">
        <div class="col-md-12">
            <form method="get">
                <div class="input-group search-bar">
                    <input type="text" name="search" class="form-control"
                           placeholder="Search categories"
                           value="@ViewData["CurrentSearch"]" />
                    <button type="submit" class="btn btn-search">
                        <i class="pi pi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <table class="table-modern">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1;
            }
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@index</td>
                    <td>@category.Category.Name</td>
                    <td>@category.Category.Description</td>
                    <td>
                        <span style="color:@(category.Category.Status == Status.Active ? "#00FF00" : "#DD0000"); font-weight:600;">
                            @category.Category.Status
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-page="/Staff/EditCategory" asp-route-id="@category.Category.Id"
                           class="btn-icon btn-edit" title="Edit">
                            <i class="pi pi-pencil"></i>
                        </a>
                        <form asp-page-handler="Delete" asp-route-id="@category.Category.Id"
                              method="post" style="display:inline-block;">
                            <button type="submit" class="btn-icon btn-delete"
                                    onclick="return confirm('Are you sure you want to delete this category ???')" title="Delete">
                                <i class="pi pi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>

    @if (!Model.Categories.Any())
    {
        <div class="alert alert-warning mt-4" role="alert">
            Not Found !!!
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}