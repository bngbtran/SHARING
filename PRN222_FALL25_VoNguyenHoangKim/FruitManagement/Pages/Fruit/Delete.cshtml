@page "{id:int}"
@model FruitManagement.Pages.CRUD.DeleteModel
@{
    ViewData["Title"] = "Delete Fruit";
}

<style>
    .btn {
        border-radius: 8px;
        transition: 0.2s;
        color: #FFFFFF;
    }

    .delete-box {
        background-color: #fff8f8;
        border: 1px solid #f5c2c7;
        border-radius: 10px;
        padding: 20px;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4 text-danger fw-bold">Delete Fruit</h2>

    <h5 class="text-center mb-3">Are you sure you want to delete this fruit ???</h5>

    <div class="delete-box mb-3">
        <p><strong>Name:</strong> @Model.Fruit.Name</p>
        <p><strong>Price:</strong> @String.Format("{0:N0} VNĐ", Model.Fruit.Price)</p>
        <p><strong>Quantity:</strong> @Model.Fruit.Quantity</p>
    </div>

    <form method="post" class="d-flex justify-content-end gap-2">
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
