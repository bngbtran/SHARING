@page
@model FruitManagement.Pages.CRUD.RestoreModel
@{
    ViewData["Title"] = "Restore Fruit";
}

<style>
    .btn {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
        background: #3F6C45;
        color: #FFFFFF;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4 text-success fw-bold" style="color: #3F6C45">Fruit Restore</h2>

    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-success">
            <tr>
                <th>Name</th>
                <th>Price (VNĐ)</th>
                <th>Quantity</th>
                <th style="width:20%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.DeletedFruits != null && Model.DeletedFruits.Any())
            {
                @foreach (var item in Model.DeletedFruits)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@string.Format("{0:N0} VNĐ", item.Price)</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-success">Restore</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Not Found !!!</td>
                </tr>
            }
        </tbody>
    </table>
</div>
