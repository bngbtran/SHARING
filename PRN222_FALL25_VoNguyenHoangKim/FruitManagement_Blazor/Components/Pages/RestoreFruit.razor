@page "/fruits/restore"
@inject Repository.IFruitRepository FruitRepository
@inject NavigationManager Navigation

<h2 class="text-center mb-4 text-success fw-bold" style="color: #3F6C45">Fruit Restore</h2>

@if (DeletedFruits != null && DeletedFruits.Any())
{
    <table class="table table-striped table-bordered align-middle text-center rounded shadow-sm overflow-hidden">
        <thead class="table-success">
            <tr>
                <th>Name</th>
                <th>Price (VNĐ)</th>
                <th>Quantity</th>
                <th style="width:20%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in DeletedFruits)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("N0") VNĐ</td>
                    <td>@item.Quantity</td>
                    <td>
                        <button class="btn btn-success" @onclick="() => HandleRestore(item.Id)">Restore</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center text-muted">No deleted fruits found!</p>
}

@code {
    private List<BOs.Fruits> DeletedFruits = new();

    protected override void OnInitialized()
    {
        LoadDeletedFruits();
    }

    private void LoadDeletedFruits()
    {
        DeletedFruits = FruitRepository.GetDeleted();
    }

    private void HandleRestore(int id)
    {
        FruitRepository.Restore(id);
        LoadDeletedFruits(); // Reload list after restoring
    }
}
